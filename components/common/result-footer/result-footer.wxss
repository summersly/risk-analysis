/* components/result-footer/result-footer.wxss */
.result-item {
  width: 100%;
  height: 20vh;
  padding: 10px;
  display: flex;
  align-items: flex-start;
  position: fixed;
  bottom: 0px;
  z-index: 100;
  background-color: white;
  border-top: 1px solid gainsboro;
}
.result{
  width: 60%;
  padding-top:10px; 
  display: flex;
  flex-direction: column;
  margin-right:3%; 
}
.btn-group{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.btn{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 40%;
}
label {
  font-size: 20px;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: 500;
  font-style: normal;
  text-align: left;
}
.result-score{
  font-size: 22px;
  padding-left: 10px 0 0 3px;
  font-weight: bold;
}
.more-riskjudge{
  padding-top: 25px;
  font-size: 16px;
  color: #298de5;
}