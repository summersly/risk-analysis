/* components/num-input/num-input.wxss */
.number-input {
  width: 100%;
  height: 60px;
  padding-left: 4%;
  padding-right: 2%;
  background-color: white;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #cccccc;
  
}
label {
  width: auto;
  font-size: 20px;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: 500;
  font-style: normal;
  text-align: left;
  color: black;
  padding: 0px 5px;
}
.label-changename{
  padding: 0 10px;
  line-height: 40px;
  border: 1px solid gainsboro;
  border-radius: 5px;
}
.number-input > view {
  height: 40px;
  display: flex;
  align-items: center;
  border-radius: 5px;
}
.input-name{
  width: 30%;
}
.input-item {
  padding-left: 10px;
  width: 26%;
  margin-left: 2%;
  border: 1px solid gainsboro;
}
.warning{
  box-shadow: 0px 0px 2px 1px rgba(235, 54, 54, 0.589);
}
.input-unit {
  color: #797979;
  width: 30%;
  margin-left: 2%;  
}