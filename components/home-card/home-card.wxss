.basic-card {
  width: 43vw;
  height: 200px;
  margin: 7px 1% 0px;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border: 1px solid #cccccc;
  border-radius: 7px;
}

.basic-card > image {
  width: 100px;
  height: 100px;
}

.basic-card > view {
  width: 80%;
  margin-bottom: 5px;
  border-bottom: 1px dashed #797979;
}

.basic-card > view:last-child {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: none;
  border-bottom: none;
}
.basic-card > view:last-child > text {
  font-size: 16px;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: 400;
  font-style: normal;
  text-align: center;
}

