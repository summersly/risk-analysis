/* component/radio-input/radio-input.wxss */
.radio-input {
  width: 100%;
  height: 60px;
  padding-left: 4%;
  background-color: white;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #cccccc;

}
.input-name{
  width: 35%;
}
label {
  width: 35%;
  font-size: 20px;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: 500;
  font-style: normal;
  text-align: left;
}

.radio-input  > radio-group {
  height: 40px;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
radio:first-child{
  width: 50%
}
.radio-input-item{
  width: 40%;
}